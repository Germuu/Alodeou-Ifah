---
import '../styles/global.css';
const duoName = "IFADEOU";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{duoName} | Ancestral Rituals</title>
	</head>
	<body class="bg-black">
		<main class="mx-auto max-w-5xl px-6 py-20">
			
			<section class="flex min-h-[70vh] flex-col items-center justify-center text-center">
				<div class="mb-6 h-1 w-12 bg-purple-600 animate-glow"></div>
				<h1 class="text-7xl font-black tracking-tighter md:text-9xl uppercase italic">
					{duoName}
				</h1>
				<p class="mt-6 max-w-xl text-lg text-gray-400 md:text-2xl font-light">
					Finno-Beninese duo weaving West African roots into futuristic rap rituals.
				</p>
			</section>

			<section class="grid gap-12 md:grid-cols-2 mt-20">
				
				<div class="space-y-4">
					<h2 class="text-sm font-bold tracking-widest text-purple-500 uppercase">Live Ritual</h2>
					<div class="aspect-video w-full overflow-hidden border border-white/10 bg-white/5">
						<iframe 
							width="100%" height="100%" 
							src="https://www.youtube.com/embed/dQw4w9WgXcQ" 
							title="YouTube video player" frameborder="0" 
							allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
							allowfullscreen>
						</iframe>
					</div>
				</div>

				<div class="space-y-4">
					<h2 class="text-sm font-bold tracking-widest text-purple-500 uppercase">The Sound</h2>
					<div class="h-full border border-white/10 bg-white/5 p-2">
						<iframe 
							style="border-radius:12px" 
							src="https://open.spotify.com/embed/artist/3TVXtAsR1InumI4p6PLS92?utm_source=generator&theme=0" 
							width="100%" height="352" frameBorder="0" 
							allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
							loading="lazy">
						</iframe>
					</div>
				</div>

			</section>

			<footer class="mt-40 border-t border-white/10 pt-10 text-center text-gray-500">
				<p class="text-sm uppercase tracking-widest">Bookings: contact@ifadeou.fi</p>
			</footer>

		</main>
	</body>
</html>

<style>
	.animate-glow {
		box-shadow: 0 0 20px rgba(23, 101, 66, 0.5);
		animation: pulse 2s infinite;
	}
	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}
</style>